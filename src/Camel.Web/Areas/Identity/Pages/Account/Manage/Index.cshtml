@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="field-row-stacked">
                <label asp-for="Username"></label>
                <input asp-for="Username" placeholder="Please choose your username." disabled />
            </div>
            <div class="field-row-stacked">
                <label asp-for="Input.AvatarFile">Avatar</label>
                <input asp-for="Input.AvatarFile" placeholder="Choose your avatar picture."/>
                <span asp-validation-for="Input.AvatarFile" class="text-danger"></span>
            </div>
            <div class="field-row-stacked">
                <label asp-for="Input.Userpage">Userpage</label>
                <textarea asp-for="Input.Userpage" rows="4"></textarea>
                <span asp-validation-for="Input.Userpage" class="text-danger"></span>
            </div>
            @* <div class="form-floating mb-3"> *@
            @*     <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/> *@
            @*     <label asp-for="Input.PhoneNumber" class="form-label"></label> *@
            @*     <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span> *@
            @* </div> *@
            <button id="update-profile-button" type="submit">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
